<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#bdbdbd"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="60dp"
        android:id="@+id/music_notification_musicImage"
        android:layout_height="60dp"
        android:src="@drawable/icon_default_singer"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/music_notification_musicname"
            android:text="思念是一种病"
            android:textColor="@color/nightYa"
            android:layout_alignParentTop="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/music_notification_play_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_music_pause" />

        <ImageView
            android:id="@+id/music_notification_play_previous"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/icon_music_previous" />

        <ImageView
            android:id="@+id/music_notification_play_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:src="@drawable/icon_music_next"
            android:layout_alignParentRight="true" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>